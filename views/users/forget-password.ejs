
<link rel="stylesheet" href="/style.css">

<section class="container">
  <div class="login-container">
    <div class="circle circle-one"></div>

    <div class="form-container">
      <h1 class="opacity" style="font-size: x-large; margin-left: 20px;">RESET PASSWORD</h1>

      <% if (typeof message !== 'undefined') { %>
        <h4 class="opacity" style="color: green;"><%= message %></h4>
      <% } %>

      <form action="/forget-password" method="post">
        <input type="password" name="password" placeholder="Enter new password" required />
        <input type="hidden" name="user_id" value="<%= user_id %>" />
        <button class="opacity" type="submit">RESET PASSWORD</button>
      </form>

      <form action="/login" method="get" style="margin-top: 15px;">
        <button type="submit" class="opacity" style="background:none; border:none; color:#007bff; text-decoration: underline; cursor: pointer; padding: 0;">
          Back to Login
        </button>
      </form>

      <div class="register-forget opacity"></div>
    </div>

    <div class="circle circle-two"></div>
  </div>
  <div class="theme-btn-container"></div>
</section>